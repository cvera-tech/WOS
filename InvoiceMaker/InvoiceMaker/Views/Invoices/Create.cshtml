@model InvoiceMaker.FormModels.CreateInvoice

<h1>Create an Invoice</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <fieldset>
        <div>
            @Html.LabelFor(model => model.ClientId)
            @Html.DropDownListFor(model => model.ClientId, Model.ClientList)
        </div>

        <div>
            @Html.LabelFor(model => model.InvoiceNumber)
            @Html.TextBoxFor(model => model.InvoiceNumber)
            @Html.ValidationMessageFor(model => model.InvoiceNumber)
        </div>

        <div>
            @Html.LabelFor(model => model.Status)
            @Html.EnumDropDownListFor(model => model.Status)
        </div>

        <div>
            <input type="submit" value="Submit" />
            @Html.ActionLink("Cancel", "Index")
        </div>
    </fieldset>
}